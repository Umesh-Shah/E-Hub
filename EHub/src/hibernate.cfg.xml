<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
  <property name="hibernate.connection.driver_class">

com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">

jdbc:mysql://localhost/ehub</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.password"></property>
  <property name="hibernate.connection.pool_size">10</property>
  <property name="show_sql">true</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <!-- Mapping files -->
 
<mapping resource="VO/Cat.hbm.xml"/>
<mapping resource="VO/Subcat.hbm.xml"/>
<mapping resource="VO/Skill.hbm.xml"/>
<mapping resource="VO/Qualification.hbm.xml"/>
<mapping resource="VO/Country.hbm.xml"/>
<mapping resource="VO/City.hbm.xml"/>
<mapping resource="VO/Zip.hbm.xml"/>
<!-- <mapping resource="VO/Link.hbm.xml"/> -->
<!-- <mapping resource="VO/Signup.hbm.xml"/> -->
<mapping resource="VO/Exam.hbm.xml"/>
<mapping resource="VO/Ques.hbm.xml"/>
<mapping resource="VO/Result.hbm.xml"/>
</session-factory>
</hibernate-configuration>